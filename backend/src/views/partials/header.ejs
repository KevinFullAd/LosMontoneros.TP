<header class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
  <h1 class="h4 mb-0 text-primary d-flex align-items-center">
    <i class="bi bi-speedometer2 me-2"></i> Dashboard
  </h1>
  <div class="d-flex align-items-center gap-3">
    <span class="text-muted small">
      Sesión: <%= (adminEmail || "Administrador") %>
    </span>
    <form action="/admin/logout" method="get" class="m-0">
      <button type="submit" class="btn btn-outline-danger btn-sm">
        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
      </button>
    </form>
  </div>
</header>
